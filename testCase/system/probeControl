FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
probes
{
    libs            (sampling);
    type            probes;
    name            probes;
    writeControl    timeStep;
    writeInterval   10;
    fields          (p  U);
    probeLocations
    (
            (-200 0.0 0.5)
            ( 200 0.0 0.5)
            (-0.5   0.0 0.5)
            ( 0.5   0.0 0.5)
            ( 0.0  -0.5 0.5)
            ( 0.0   0.5 0.5)
    );
